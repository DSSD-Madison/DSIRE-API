{
  "name": "dsire-api-fe",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DSSD-Madison/DSIRE-API.git",
    "directory": "frontend/"
  },
  "scripts": {
    "build-css": "esbuild static/styles/root.css static/styles/registration.css static/styles/demo.css --bundle --minify --outdir=../dist/frontend/styles/",
    "build-graphiql": "esbuild src/graphiql.jsx --bundle --minify --outdir=../dist/frontend/scripts/",
    "render": "chmod +x render.sh; ./render.sh",
    "deploy": "aws s3 sync --size-only --delete ../dist/frontend/ s3://${HOSTING_BUCKET}/$(git rev-parse --abbrev-ref HEAD | sed 's~refs/heads/~~g; s~\\.~-~g; s~_~-~g; s~/~-~g')/",
    "clean": "rm -rf ../dist"
  },
  "dependencies": {
    "esbuild": "^0.17.18",
    "graphiql": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
